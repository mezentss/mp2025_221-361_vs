<Window x:Class="ColorBoxWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorBoxWPF"
        mc:Ignorable="d"
        Title="Color Box" Height="450" Width="600">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
			<TextBlock x:Name="lblCorrect" Margin="10" FontSize="16"/>
			<TextBlock x:Name="lblWrong" Margin="10" FontSize="16"/>
			<TextBlock x:Name="lblLevel" Margin="10" FontSize="16"/>
			<TextBlock x:Name="lblScore" Margin="10" FontSize="16"/>
		</StackPanel>

		<UniformGrid x:Name="gameGrid" Grid.Row="1" Margin="10"/>
	</Grid>
</Window>