<Window x:Class="wpfNumberPath.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результаты" Height="320" Width="340" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#FAFAFA">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Результаты" FontSize="28" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock x:Name="LevelsPassedText" FontSize="22" FontWeight="SemiBold" TextAlignment="Center" Margin="0,0,0,20"/>
            <Border CornerRadius="12" Background="#2196F3">
                <Button Content="На главную" Width="180" Height="48" FontSize="18" Background="Transparent" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="BackButton_Click"/>
            </Border>
        </StackPanel>
    </Grid>
</Window> 