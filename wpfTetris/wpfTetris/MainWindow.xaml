<Window x:Class="wpfTetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfTetris"
        mc:Ignorable="d"
        Title="Тетрис" Height="600" Width="481">
    <Grid Background="#222">
        <Border BorderBrush="Gold" BorderThickness="6" CornerRadius="8" Margin="20,20,200,20">
            <Canvas x:Name="GameCanvas" Width="300" Height="540" Background="#111"/>
        </Border>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,20,10,0" VerticalAlignment="Top" Width="140">
            <TextBlock Text="Счёт:" FontSize="22" Foreground="Gold" Margin="0,0,0,10"/>
            <TextBlock x:Name="ScoreText" Text="0" FontSize="32" Foreground="White" FontWeight="Bold" Margin="0,0,0,30"/>
            <Button x:Name="StartButton" Content="Старт" FontSize="18" Margin="0,0,0,10" Click="StartButton_Click"/>
            <Button x:Name="PauseButton" Content="Пауза" FontSize="18" Margin="0,0,0,10" Click="PauseButton_Click"/>
            <Button x:Name="RestartButton" Content="Рестарт" FontSize="18" Click="RestartButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
